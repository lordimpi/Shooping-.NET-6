@model Shooping.Data.Entities.Category

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

<h1>Borrar</h1>

<h3>¿Está seguro de borrar el registro?</h3>
<div>

    <partial name="_CategoryDetails" />

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" value="Delete" class="btn btn-outline-danger">
            <i class="bi bi-check-circle"></i> Eliminar
        </button>
        <a asp-action="Index" class="btn btn-outline-success"><i class="bi bi-arrow-left-circle"></i> Regresar</a>
    </form>
</div>