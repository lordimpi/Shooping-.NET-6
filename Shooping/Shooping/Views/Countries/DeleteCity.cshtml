@model Shooping.Data.Entities.City

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>¿Está seguro de borrar el registro?</h3>
<div>

    <partial name="_CityDetails" />

    <form asp-action="DeleteCity">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fa-solid fa-circle-check"></i> Borrar
        </button>
        <a asp-action="DetailsState" asp-route-id="@Model?.State.Id" class="btn btn-success">
            <i class="fa-solid fa-circle-left"></i> Regresar
        </a>
    </form>
</div>