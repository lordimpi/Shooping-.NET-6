@model Shooping.Data.Entities.State

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>¿Está seguro de borrar el registro?</h3>
<div>

    <partial name="_StateDetails"/>
    
    <form asp-action="DeleteState">
        <input type="hidden" asp-for="Id" />
        <button type="submit" value="Delete" class="btn btn-danger">
            <i class="fa-solid fa-circle-check"></i> Borrar
        </button>
        <a asp-action="Details" asp-route-id="@Model?.Country.Id"  class="btn btn-success"><i class="fa-solid fa-circle-left"></i> Regresar</a>
    </form>
</div>
