@model Shooping.Data.Entities.Country

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>País</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="States" />
            <partial name="_Country" />

            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-check-circle"></i> Crear
                </button>
                <a asp-action="Index" class="btn btn-outline-success"><i class="bi bi-arrow-left-circle"></i> Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}