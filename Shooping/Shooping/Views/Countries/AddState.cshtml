@model Shooping.Models.StateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Departamento/Estado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CountryId" />

            <partial name="_State" />

            <div class="form-group mt-2">
                <button type="submit" value="Crear" class="btn btn-primary">
                    <i class="fa-solid fa-circle-plus"></i> Crear
                </button>
                <a asp-action="Details" asp-route-id="@Model.CountryId" class="btn btn-success"><i class="fa-solid fa-circle-left"></i> Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}