@model Shooping.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recover Password";
}

<flash dismissable="true" />

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card mb-3" style="width: 450px; height: 300px">
            <h5 class="card-header bg-dark text-center text-white">
                <i class="fa-solid fa-key text-navy text-white"></i> Recuperacion de Contraseña</h5>
            <div class="card-body bg-white">

                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-warning"></span>
                    </div>

                    <div class="form-group mt-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa-solid fa-key"></i> Recuperación de Contraseña
                        </button>
                        <a asp-action="Login" class="btn btn-success"><i class="fa-solid fa-circle-left"></i> Regresar</a>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-dark text-center text-white">
                <br />
            </div>
        </div>

        <div class="text-success">
            <p>
                @ViewBag.Message
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}